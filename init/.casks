#!/usr/bin/env bash

function cask() {
  if brew cask info "${@}" | grep "Not installed" > /dev/null; then
    brew cask install "${@}"
  else
    echo "${@} is already installed."
  fi
}

echo ""
echo "Installing 1Password"
cask 1password

echo ""
echo "Installing cDock"
cask cdock

